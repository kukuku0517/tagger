<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@color/background_light_grey</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="AppTheme.AppBar" parent="AppTheme">
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimary">@color/background_light_grey</item>
    </style>

    <style name="AppTheme.Search" parent="AppTheme">
        <item name="colorAccent">@color/transparent</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
    </style>

    <style name="AppTheme.FilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/white</item>
        <item name="checkedIcon">@drawable/ic_check_white_24dp</item>
    </style>

    <style name="AppTheme.Checkbox" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="buttonTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="buttonTint">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.Title" parent="AppTheme">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.SubTitle" parent="AppTheme">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Menu" parent="AppTheme">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">

    </style>
</resources>
